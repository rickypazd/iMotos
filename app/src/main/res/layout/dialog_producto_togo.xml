<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5D3892"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/boton_lila"
                android:textAlignment="center"
                android:gravity="center"
                android:text="Añadir producto"
                android:textSize="17sp"
                android:textColor="@color/colorWhite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_cancelar"
                android:layout_width="26dp"
                android:layout_height="29dp"
                android:layout_gravity="fill_horizontal"
                android:layout_marginEnd="0dp"
                android:src="@drawable/ic_cancel_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <EditText
                android:id="@+id/text_pedido"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="¿Qué te llevamos?"
                android:inputType="textMultiLine"
                android:textColorHint="@color/colorGris"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_button_border_gris"
                android:padding="10dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/text_descripcion"
                android:textColorHint="@color/colorGris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_button_border_gris"
                android:gravity="fill_horizontal"
                android:hint="Descripción del producto, indicaciones importantes."
                android:inputType="textMultiLine"
                android:minHeight="90dp"
                android:padding="10dp"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_menos"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_icon_menos"
                android:layout_margin="5dp"
                android:text="Aceptar"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/text_cantidad"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="0"
                android:inputType="number"
                android:minHeight="50dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/btn_mas"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_icon_mas"
                android:layout_margin="5dp"
                android:text="Aceptar"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_confirmar_togo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/ic_button_favoritos"
                android:textAllCaps="false"
                android:text="Agregar"
                android:visibility="visible"
                android:backgroundTint="#9A50EF"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_editar_togo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/ic_button_favoritos"
                android:visibility="gone"
                android:text="Editar"
                android:textAllCaps="false"
                android:backgroundTint="#9A50EF"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>