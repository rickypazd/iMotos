<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio_viaje_togo">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/Container_cancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="55dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btn_cancelar_viaje"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBlack"
                android:text="Cancelar pedido"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"/>

        </LinearLayout>

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rotation="180">

            <LinearLayout
                android:id="@+id/bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:background="@color/colorPrimary2"
                android:clipToPadding="true"
                app:behavior_peekHeight="55dp"
                app:layout_behavior="utiles.BehaviorCuston">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:rotation="180">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stackFromBottom="true"
                        android:transcriptMode="alwaysScroll">

                        <ListView
                            android:id="@+id/lista_productos"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:background="@color/colorWhite"
                            android:clickable="true"
                            android:divider="#929292"
                            android:dividerHeight="1px"
                            android:stackFromBottom="true"
                            android:transcriptMode="alwaysScroll"
                            tools:listitem="@layout/layout_item_pedidos_togo">
                        </ListView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_cantidad"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:drawablePadding="20dp"
                                android:drawableStart="@drawable/ic_arrow_and_up"
                                android:padding="16dp"
                                android:text="Productos (0)"
                                android:textColor="@color/cardview_light_background"
                                android:textSize="18dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </android.support.design.widget.CoordinatorLayout>

        <android.support.design.widget.CoordinatorLayout
                android:id="@+id/Container_verPerfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/button_sheet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    app:behavior_hideable="true"
                    app:behavior_peekHeight="55dp"
                    app:layout_behavior="@string/bottom_sheet_behavior">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/backgroundcolor2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:text="Ver perfil"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhite"
                                android:textSize="22dp"
                                android:gravity="center" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <Button
                                        android:id="@+id/btn_llamar"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/ic_logo_phone"
                                        android:drawableStart="@drawable/ic_telefono"
                                        android:padding="17dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/img_foto"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:drawableStart="@drawable/ic_sobre"
                                        android:padding="17dp"
                                        android:src="@mipmap/ic_miperfil_round" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <Button
                                        android:id="@+id/btn_enviar_mensaje"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/ic_logo_phone"
                                        android:drawableStart="@drawable/ic_sobre"
                                        android:padding="17dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_marginEnd="40dp"
                                android:layout_marginStart="40dp"
                                android:layout_weight="1.1">

                                <TextView
                                    android:id="@+id/text_nombreConductor"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:textSize="18dp"
                                    android:textColor="@color/colorWhite"
                                    android:gravity="center"
                                    android:background="@drawable/ic_redondo1_finalizar"
                                    android:inputType="textPersonName" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginStart="40dp"
                                android:layout_marginEnd="40dp"
                                android:layout_weight="1.1">

                                <TextView
                                    android:id="@+id/text_nombreAuto"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_gravity="center"
                                    android:textSize="15dp"
                                    android:textColor="@color/colorWhite"
                                    android:gravity="center"
                                    android:background="@drawable/botonred"
                                    android:inputType="textPersonName"
                                    android:layout_weight="1"/>

                                <TextView
                                    android:id="@+id/text_numeroPlaca"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_gravity="center"
                                    android:textSize="15dp"
                                    android:textColor="@color/colorWhite"
                                    android:gravity="center"
                                    android:layout_marginStart="20dp"
                                    android:background="@drawable/botonred"
                                    android:inputType="textPersonName"
                                    android:layout_weight="1"/>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_weight="1.04">

                                <TextView
                                    android:id="@+id/text_Viajes"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:text="Ha completado 256 viajes"
                                    android:textAlignment="center"
                                    android:gravity="center"
                                    android:textColor="#fff"
                                    android:textSize="20dp" />

                                <TextView
                                    android:id="@+id/text_Logros"
                                    android:layout_width="180dp"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:text="Logros"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="22dp"
                                    android:textStyle="bold"
                                    android:background="@drawable/ic_redondo1_finalizar"
                                    android:inputType="textPersonName" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:id="@+id/button6"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:background="@drawable/ic_icon_amable"
                                        />

                                    <TextView
                                        android:id="@+id/textView12"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:textAlignment="center"
                                        android:text="Amable"
                                        android:textColor="#fff" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:id="@+id/button3"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:background="@drawable/ic_buena_ruta2"
                                        />

                                    <TextView
                                        android:id="@+id/textView11"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:textAlignment="center"
                                        android:text="Buena Ruta"
                                        android:textColor="#fff" />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:id="@+id/button7"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:background="@drawable/ic_icon_auto_limpio"
                                        />

                                    <TextView
                                        android:id="@+id/textView13"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Auto limpio"
                                        android:textAlignment="center"
                                        android:paddingTop="10dp"
                                        android:textColor="#fff" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="40dp"
                                android:layout_marginStart="40dp"
                                android:layout_marginBottom="20dp"
                                android:gravity="center"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/textView14"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:alpha="0.5"
                                    android:background="@drawable/rounded_corner"
                                    android:padding="10dp"
                                    android:inputType="textMultiLine"
                                    android:text="nombre"
                                    android:textColor="#fff" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

        </android.support.design.widget.CoordinatorLayout>


    </android.support.constraint.ConstraintLayout>
</FrameLayout>