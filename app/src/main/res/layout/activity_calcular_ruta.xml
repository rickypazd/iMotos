<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Calcular_ruta_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorPrimary2"
            app:titleTextColor="@color/colorBlack"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_efectivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:buttonTint="@color/colorBlack"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="Efectivo"/>

                <RadioButton
                    android:id="@+id/radio_credito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:buttonTint="@color/colorBlack"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="CrÃ©dito"/>

            </RadioGroup>

        </android.support.v7.widget.Toolbar>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/id_carview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.6"
            >

            <LinearLayout
                android:id="@+id/ll_boton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary2"
                android:orientation="vertical"
                android:visibility="visible">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#424242" >
                </View>

                <TextView
                    android:id="@+id/tv_monto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="30dp"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:text="Monto aproximado"
                    android:textColor="#424242"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tipo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Moto Taxi"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp"
                        android:layout_marginStart="20dp"
                        android:textStyle="bold"
                        />


                    <ImageView
                        android:id="@+id/icono2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/ic_icon_imoto"
                        android:textStyle="bold"
                        android:visibility="visible" />

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapviewPedirSiete"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <Button
                android:id="@+id/btn_confirmar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary2"
                android:elevation="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:text="Confirmar"
                android:layout_gravity="bottom"
                android:textSize="18dp"
                android:textColor="@color/colorBlack" />

        </FrameLayout>


        </LinearLayout>

</LinearLayout>